# backend/app/core/prometheus/.env.example
# Prometheus monitoring configuration
# Copy this file to .env and customize for your environment

# --- Basic Configuration ---
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_SERVICE_URL=http://localhost:9090

# --- Performance Settings ---
PROMETHEUS_HEALTH_TIMEOUT=30
PROMETHEUS_SCRAPE_INTERVAL=15

# --- Labeling ---
PROMETHEUS_METRICS_PREFIX=lead_ignite_
PROMETHEUS_DEFAULT_LABELS='{"service":"lead_ignite","environment":"production"}'
